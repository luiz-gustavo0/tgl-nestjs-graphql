{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src/modules",
  "compilerOptions": {
    "assets": [
      {
        "include": "mail/templates/**/*.hbs",
        "outDir": "dist/modules"
      }
    ],
    "watchAssets": true,
    "plugins": [
      "@nestjs/graphql"
    ]
  }
}